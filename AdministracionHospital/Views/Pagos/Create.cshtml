@model AdministracionHospital.Models.PagosModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center">
    <h2><strong>Formulario de Registro de Pagos</strong></h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center"><strong></strong></h4>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_Pago, "Numero de Pago", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ID_Pago, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID_Pago, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Monto, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Metodo_Pago, "Método de Pago", new { @class = "control-label col-md-3"})
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Metodo_Pago, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Metodo_Pago, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_Hospital, "Hospital", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownList("ID_Hospital", (IEnumerable<SelectListItem>)ViewBag.ID_Hospital, "Seleccione Hospital", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_Hospital, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_Paciente, "Paciente", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownList("ID_Paciente", (IEnumerable<SelectListItem>)ViewBag.ID_Paciente, "Seleccione Paciente", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_Paciente, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_Tratamiento, "Tratamiento", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ID_Tratamiento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID_Tratamiento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Registrar Pago" class="btn btn-success" />
                                @Html.ActionLink("Regresar", "TotalPagosCliente", "Pagos", new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
