@model AdministracionHospital.Models.TotalPagosModel

@{
    ViewBag.Title = "Total de Pagos por Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que esta ruta sea correcta
}

<div class="container-fluid">
    <h2 class="text-justify"><strong>Consulta Total de Pagos por Cliente</strong></h2>
    <hr />

    @using (Html.BeginForm("TotalPagosCliente", "Pagos", FormMethod.Get)) 
    {
        <div class="row mb-4 bg-light p-3 border rounded">
            
            <div class="col-md-4">
                <label for="ID_Paciente" class="form-label">Cédula del Paciente:</label>
                <input type="text" name="ID_Paciente" id="ID_Paciente"
                       class="form-control" placeholder="Ingrese Cédula del Paciente" required/>
            </div>

            <div class="col-md-3">
                <label for="Fecha_Inicio" class="form-label">Fecha Inicial:</label>
                <input type="date" name="Fecha_Inicio" id="Fecha_Inicio"
                       class="form-control" required />
            </div>

            <div class="col-md-3">
                <label for="Fecha_Final" class="form-label">Fecha Final:</label>
                <input type="date" name="Fecha_Final" id="Fecha_Final"
                       class="form-control" required />
            </div>

            <div class="col-md-2 d-flex text-right">
                <button type="submit" class="btn btn-success me-2 w-100">
                    <i class="fas fa-calculator"></i> Consultar
                </button>
            </div>
        </div>
    }

    <hr />

    @if (Model != null && Model.Total_Pagos_Cliente > 0)
    {
        <h3 class="bg-success text-white text-center p-2 rounded"><strong>Total de Pagos del Paciente</strong></h3>

        <div class="card shadow-sm">
            <div class="card-body text-center">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Cliente)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Cliente)
                    </dd>                                   
                    <dt class="col-sm-4 h4 text-primary">
                        @Html.DisplayNameFor(model => model.Total_Pagos_Cliente)
                    </dt>
                    <dd class="col-sm-8 h4 text-primary">
                        ₡@Html.DisplayFor(model => model.Total_Pagos_Cliente)
                    </dd>
                </dl>
            </div>
        </div>
        
    }
    else if (ViewBag.ID_PacienteActual != null && !string.IsNullOrWhiteSpace(ViewBag.ID_PacienteActual))
    {

        <div class="alert alert-warning">
            No se encontraron pagos para el paciente **@ViewBag.ID_PacienteActual** en el rango de fechas especificado.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Ingrese el ID del paciente y el rango de fechas para calcular el total de pagos.
        </div>
    }

<div class="mt-4 text-right">
    @Html.ActionLink("Volver al Inicio", "Index", "Home", null, new { @class = "btn btn-danger" })
    @Html.ActionLink("Registrar Pago", "Create", "Pagos", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Calcular Pagos Pendientes", "Details", "Pagos", null, new { @class = "btn btn-info" })
</div>
</div>