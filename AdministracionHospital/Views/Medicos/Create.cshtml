@model AdministracionHospital.Models.MedicosModel

@{
    ViewBag.Title = "RegistrarMédico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center">
    <h2><strong>Formulario de Registro de Médicos</strong></h2>
    @Html.ActionLink("Medicos Registrados", "Details", "Medicos", null, new { @class = "btn btn-info text-decoration-none text-white" })
</div>

<div class="row m-5">
    <div class="col-md-8 col-md-offset-2">

        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center"><strong>Datos del Médico</strong></h4>
                    <hr />

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Medico, "Cédula", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ID_Medico, new { htmlAttributes = new { @class = "form-control", placeholder = "Formato: x-xxxx-xxxx" } })
                            @Html.ValidationMessageFor(model => model.ID_Medico, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre_Medico, "Nombre", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Nombre_Medico, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre_Medico, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefono_Medico, "Teléfono", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Telefono_Medico, new { htmlAttributes = new { @class = "form-control", placeholder = "Formato: xxxx-xxxx" } })
                            @Html.ValidationMessageFor(model => model.Telefono_Medico, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Correo_Electronico, "Correo Electrónico", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Correo_Electronico, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "ejemplo@hospital.com" } })
                            @Html.ValidationMessageFor(model => model.Correo_Electronico, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr />
                    <h4 class="text-center"><strong>Asignación</strong></h4>
                    <hr />

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Hospital, "Hospital", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("ID_Hospital", (IEnumerable<SelectListItem>)ViewBag.ID_Hospital, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_Hospital, "Seleccione Hospital", new { @class = "text-info" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Especialidad, "Especialidad", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("ID_Especialidad", (IEnumerable<SelectListItem>)ViewBag.ID_Especialidad, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_Especialidad, "Seleccione Especialidad", new { @class = "text-info" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Registrar Médico" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}