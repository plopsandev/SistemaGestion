@model AdministracionHospital.Models.PacientesModel
@{
    ViewBag.Title = "RegistrarPaciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center">
    <h2><strong>Formulario de Registro Pacientes</strong></h2>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center"><strong>Datos del Paciente</strong></h4>
                    <hr /> 
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Paciente, "Cédula", new { @class = "control-label col-md-3" }) 
                    <div class="col-md-9">
                            @Html.EditorFor(model => model.ID_Paciente, new { htmlAttributes = new { @class = "form-control", placeholder = "Formato: x-xxxx-xxxx"} })
                            @Html.ValidationMessageFor(model => model.ID_Paciente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre_Paciente, "Nombre", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Nombre_Paciente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre_Paciente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Apellidos, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Fecha_Nacimiento, "Fecha de Nacimiento", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Fecha_Nacimiento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.Fecha_Nacimiento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Genero, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <div class="radio-inline">
                                <label>@Html.RadioButtonFor(model => model.Genero, 'M', new { id = "GeneroM" }) Masculino</label>
                            </div>
                            <div class="radio-inline">
                                <label>@Html.RadioButtonFor(model => model.Genero, 'F', new { id = "GeneroF" }) Femenino</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Direccion_Paciente, "Dirección", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Direccion_Paciente, new { htmlAttributes = new { @class = "form-control", placeholder = "Provincia, Canton, Distrito" } })
                            @Html.ValidationMessageFor(model => model.Direccion_Paciente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefono_Paciente, "Teléfono", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Telefono_Paciente, new { htmlAttributes = new { @class = "form-control", placeholder = "Formato: xxxx-xxxx" } })
                            @Html.ValidationMessageFor(model => model.Telefono_Paciente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_Hospital, "Hospital", new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("ID_Hospital", (IEnumerable<SelectListItem>)ViewBag.ID_Hospital,"", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_Hospital, "Seleccione Hospital", new { @class = "text-info" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Registrar" class="btn btn-success" />

                            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}